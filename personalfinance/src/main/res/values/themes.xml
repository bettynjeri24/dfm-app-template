<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalFinance" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PersonalFinance.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.PersonalFinance.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PersonalFinance.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextInputLayoutStyle"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="font">@font/nunitosans_regular_pf</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>`
        <item name="boxStrokeColor">@color/pf_black</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8dp</item>

        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>

        <item name="android:textColor">@color/pf_black</item>
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/pf_black</item>
        <item name="fontFamily">@font/nunitosans_regular_pf</item>
    </style>

    <style name="exposedDropdownMenuCustom"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColor">@color/pf_light_gray</item>
        <item name="hintTextColor">@color/pf_black</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunitosans_regular_pf</item>
        <!--        -->
        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <!--        -->
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>`
        <item name="boxStrokeColor">@color/textinputlayout_bordercolor</item>

        <item name="boxCornerRadiusBottomEnd">@dimen/_8dp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_8dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_8dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_8dp</item>
    </style>



    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!--        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>


</resources>